<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Longitud">

    <Button
        android:id="@+id/calcular2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="calcular"
        android:text="CALCULAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.594" />

    <TextView
        android:id="@+id/ResultadoLongitud"
        android:layout_width="297dp"
        android:layout_height="90dp"
        android:text="RESULTADO"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.773" />

    <EditText
        android:id="@+id/numero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <RadioGroup
        android:layout_width="143dp"
        android:layout_height="305dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457">

        <RadioButton
            android:id="@+id/QuilometrosDER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quilometros" />

        <RadioButton
            android:id="@+id/MillasDER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Millas" />

        <RadioButton
            android:id="@+id/YardasDER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yardas" />

        <RadioButton
            android:id="@+id/PulgadasDER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pulgadas" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="147dp"
        android:layout_height="308dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.453">

        <RadioButton
            android:id="@+id/QuilometrosIZQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quilometros" />

        <RadioButton
            android:id="@+id/MillasIZQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Millas" />

        <RadioButton
            android:id="@+id/YardasIZQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yardas" />

        <RadioButton
            android:id="@+id/PulgadasIZQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pulgadas" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>